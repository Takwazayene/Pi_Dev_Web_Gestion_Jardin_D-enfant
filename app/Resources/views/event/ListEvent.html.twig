{% extends 'base1.html.twig' %}

{% block body %}
<style>.btn-rbc{
        border: 2px solid rebeccapurple;
        background-color: white;

        padding: 13px 26px;
        font-size: 14px;
        cursor: pointer;
        outline-color: rebeccapurple;
        color: rebeccapurple;
    }</style>
<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>espace event</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb part end-->

<div class="container" style="margin-top:100px;">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Event list</h4>

            </div>
            <div class="card-body">


                <div class="row">
                    <div class="col-md-6 pr-1">
                        <a class=" btn btn-rbc" href="{{ path('event_calendrier') }}"  >Afficher le calendrier des events</a>
                    </div>
                    <div class="col-md-6 pr-1 pull-right">
                        <a class=" float-right btn btn-rbc" href="{{ path('event_map') }}"  >Afficher sur Map</a>
                    </div>




                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nomevent</th>
                            <th>Categorieevent</th>
                            <th>Nbrplacedispo</th>
                            <th>Dateevent</th>
                            <th>Description</th>
                            <th>Addresse</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for event in events %}
                            <tr>
                                <td><a href="{{ path('eve_show', { 'id': event.id }) }}">{{ event.id }}</a></td>
                                <td>{{ event.nomEvent }}</td>
                                <td>{{ event.categorieEvent }}</td>
                                <td>{{ event.nbrPlaceDispo }}</td>
                                <td>{{  event.dateEvent |date('d-m-Y ')}}</td>
                                <td>{{ event.description }}</td>
                                <td>{{ event.adresse }}</td>
                                <td>

                                    <a class="genric-btn primary circle" href="{{ path('eve_show', { 'id': event.id }) }}">show</a>




                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div></div></div></div>
    {% endblock %}
