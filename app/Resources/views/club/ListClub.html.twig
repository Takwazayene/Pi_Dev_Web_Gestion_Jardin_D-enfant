{% extends 'base1.html.twig' %}

{% block body %}
    <section class="breadcrumb_part">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <h2>Espace club</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb part end-->

    <div class="container" style="margin-top:100px;">
 <br>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">liste des clubs</h4>
                </div>

                <div class="card-body">
                    <form class="navbar-search navbar-search-dark form-inline mr-1 d-none d-md-flex ml-lg-auto" method="post">
                        <div class="form-group mb-0">
                            <div class="input-group input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                                </div>
                                <input class="form-control" placeholder="Search" type="text" name="search">
                            </div>
                        </div>
                    </form>
                    <table class="table table-striped table-bordered" style="width:100%">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nomclub</th>
                            <th>Activiteclub</th>
                            <th>Effectif</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for club in clubs %}
                            <tr>
                                <td><a href="{{ path('showclb', { 'id': club.id }) }}">{{ club.id }}</a></td>
                                <td>{{ club.nomClub }}</td>
                                <td>{{ club.activiteClub }}</td>
                                <td>{{ club.effectif }}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a class="genric-btn primary circle" href="{{ path('showclb', { 'id': club.id }) }}">show</a>


                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    {# display navigation #}
                    <div class=" navigation" >
                        {{ knp_pagination_render(clubs, null, {}, {
                            'position': 'centered',
                            'size': 'small',
                            'rounded': true,
                        })  }}
                    </div>



                </div></div></div></div>
{% endblock %}

