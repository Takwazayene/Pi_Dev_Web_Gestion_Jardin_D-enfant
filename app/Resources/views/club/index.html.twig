{% extends 'AcceuilAdmin.html.twig' %}

{% block body %}


    <div class="container" style="margin-top:100px;">

        <ul>

        </ul><br>
        <div class="col-md-8">
            <div class="x_panel">

                    <a class="btn btn-primary" href="{{ path('club_new') }}">Create a new club</a>

                    <h4 class="x_title">liste des clubs</h4>


                <div class="x_content">



                    <form class="navbar-search navbar-search-dark form-inline mr-1 d-none d-md-flex ml-lg-auto" method="post">
                        <div class="form-group mb-0">
                            <div class="input-group input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                                </div>
                                <input class="form-control" placeholder="Search" type="text" name="search">
                            </div>
                        </div>
                    </form>

                    <table class="table table-striped table-bordered" style="width:100%">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nomclub</th>
                            <th>Activiteclub</th>
                            <th>Effectif</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for club in clubs %}
                            <tr>
                                <td><a href="{{ path('club_show', { 'id': club.id }) }}">{{ club.id }}</a></td>
                                <td>{{ club.nomClub }}</td>
                                <td>{{ club.activiteClub }}</td>
                                <td>{{ club.effectif }}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a class=" btn btn-primary " href="{{ path('club_show', { 'id': club.id }) }}">show</a>

                                            <a class=" btn btn-info "  href="{{ path('club_edit', { 'id': club.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    {# display navigation #}
                    <div class=" navigation" >
                        {{ knp_pagination_render(clubs, null, {}, {
                            'position': 'centered',
                            'size': 'small',
                            'rounded': true,
                        })  }}
                    </div>



                </div></div></div></div>
{% endblock %}

