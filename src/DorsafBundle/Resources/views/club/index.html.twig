
{% extends 'base1.html.twig' %}

{% block body %}
<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>Espace event</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb part end-->

<div class="container" style="margin-top:100px;">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Event</h4>
                <p class="card-category">Merci de modifier les informations</p>
            </div>
            <div class="card-body">
                <h1>Clubs list</h1>

                <table>
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nomclub</th>
                        <th>Activiteclub</th>
                        <th>Effectif</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for club in clubs %}
                        <tr>
                            <td><a href="{{ path('club_show', { 'id': club.id }) }}">{{ club.id }}</a></td>
                            <td>{{ club.nomClub }}</td>
                            <td>{{ club.activiteClub }}</td>
                            <td>{{ club.effectif }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a class="genric-btn primary circle" href="{{ path('club_show', { 'id': club.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a class="genric-btn primary circle"  href="{{ path('club_edit', { 'id': club.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {# display navigation #}
                <div class=" navigation" >
                    {{ knp_pagination_render(clubs, null, {}, {
                        'position': 'centered',
                        'size': 'small',
                        'rounded': true,
                    })  }}
                </div>
                <ul>
                    <li>
                        <a class="genric-btn primary circle" href="{{ path('club_new') }}">Create a new club</a>
                    </li>
                </ul>
                {% endblock %}
